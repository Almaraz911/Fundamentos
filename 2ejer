#include <iostream>
using namespace std;


int main() {
    int cantidad;
    float precio, total, descuento1, descuento2, totalPagar;
    
    cout << "Ingrese el numero de camisas: ";
    cin >> cantidad;
    
    cout << "Ingrese el precio por camisa: ";
    cin >> precio;
    
    total = cantidad * precio;
    
    if (cantidad >= 3) {
        descuento1 = total * 0.25;
        cout<<"tu total a pagar con descuento del 25% es: "<<descuento1<<endl;
    } 
    else if(cantidad<3) { 
        descuento2 = total * 0.10;
        cout<<"tu total a pagar con descuento del 10% es: "<<descuento2<<endl;
    }
    
    return 0;
}
