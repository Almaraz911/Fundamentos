#include <iostream>
using namespace std;

int main() {
    float presupuesto, ginecologia, traumatologia, pediatria;
    
    cout << "Ingrese el presupuesto anual del hospital: ";
    cin >> presupuesto;
    
    ginecologia = presupuesto * 0.40;
    traumatologia = presupuesto * 0.30;
    pediatria = presupuesto * 0.30;
    
    cout << "Presupuesto para Ginecologia: " << ginecologia << endl;
    cout << "Presupuesto para Traumatologia: " << traumatologia << endl;
    cout << "Presupuesto para Pediatria: " << pediatria << endl;

    return 0;
}
