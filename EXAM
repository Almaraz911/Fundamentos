#include <iostream>
#include <cmatch> // "Math, n"

using namespace std;

int main() {
    float a, b, c, s, area;
    
    cout << "Ingrese el lado a: ";
    cin >> a;
    cout << "Ingrese el lado b: ";
    cin >> b;
    cout << "Ingrese el lado c: ";
    cin >> c;
    
    s = (a + b + c) / 2;
    
    area = sqrt(s* (s - a) * (s - b) * (s - c));
    
    cout << "El area del triangulo es: " << area << endl;
    
    return 0;
    
}
